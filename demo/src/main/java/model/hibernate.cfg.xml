<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings - Change accordingly -->
        <property name="connection.url">
            jdbc:mysql://localhost:3306/gameDatabase
        </property>
        
        <!-- Driver class name for MySQL -->
        <property name="connection.driver_class">
            com.mysql.jdbc.Driver
        </property>

        <!-- Database username and password - Change accordingly -->
        <property name="connection.username">
            root
        </property>
        <property name="connection.password">
            123456789
        </property>

        <!-- Set AutoCommit to true -->
        <property name="connection.autocommit">
            true
        </property>

        <!-- SQL Dialect to use. Dialects are database specific -->
        <property name="dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <!-- Mapping files - where the data is stored -->
        <mapping resource="Game.hbm.xml" />

    </session-factory>
</hibernate-configuration>
